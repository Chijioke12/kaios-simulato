<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a202c"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="#2d3748"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <!-- SCREEN -->
            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="300dp"
                android:background="#000000">
                <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent" />
                <TextView android:id="@+id/defaultText" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="KaiOS SCREEN" android:textColor="#FFFFFF" />
            </FrameLayout>

            <!-- SOFT KEYS -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <Button android:id="@+id/btnSoftLeft" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="MENU" android:textColor="#FFFFFF" android:backgroundTint="#4b5563" android:textSize="12sp" android:padding="0dp" />
                <View android:layout_width="10dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnSoftRight" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="OPT" android:textColor="#FFFFFF" android:backgroundTint="#4b5563" android:textSize="12sp" android:padding="0dp" />
            </LinearLayout>

            <!-- D-PAD (Fixed Arrows) -->
            <RelativeLayout android:layout_width="130dp" android:layout_height="130dp" android:layout_marginTop="5dp">
                <Button android:id="@+id/btnUp" android:layout_width="50dp" android:layout_height="40dp" android:layout_centerHorizontal="true" android:text="UP" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:textSize="10sp" />
                <Button android:id="@+id/btnLeft" android:layout_width="40dp" android:layout_height="50dp" android:layout_centerVertical="true" android:text="L" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" />
                <Button android:id="@+id/btnOk" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true" android:text="OK" android:textColor="#FFFFFF" android:backgroundTint="#48bb78" />
                <Button android:id="@+id/btnRight" android:layout_width="40dp" android:layout_height="50dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:text="R" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" />
                <Button android:id="@+id/btnDown" android:layout_width="50dp" android:layout_height="40dp" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:text="DOWN" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:textSize="10sp" />
            </RelativeLayout>

            <!-- CALL / END -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <Button android:id="@+id/btnCall" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="CALL" android:textColor="#FFFFFF" android:backgroundTint="#059669" />
                <View android:layout_width="10dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnEnd" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="BACK" android:textColor="#FFFFFF" android:backgroundTint="#dc2626" />
            </LinearLayout>

            <!-- NUMPAD ROWS (Prevents column overlap) -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="5dp">
                <Button android:id="@+id/btn1" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="1" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn2" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="2" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn3" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="3" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btn4" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="4" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn5" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="5" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn6" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="6" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btn7" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="7" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn8" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="8" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn9" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="9" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btnStar" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="*" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn0" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="0" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
                <Button android:id="@+id/btnHash" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="#" android:textColor="#FFFFFF" android:backgroundTint="#374151" />
            </LinearLayout>
        </LinearLayout>

        <!-- DEBUG AREA -->
        <Button android:id="@+id/btnUpload" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="UPLOAD HTML" android:backgroundTint="#2563eb" android:layout_marginTop="10dp"/>
        <ScrollView android:id="@+id/logScroll" android:layout_width="match_parent" android:layout_height="80dp" android:background="#000" android:layout_marginTop="5dp">
            <TextView android:id="@+id/keyLogger" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#00FF00" android:padding="5dp" android:text="> System Ready" />
        </ScrollView>
    </LinearLayout>
</ScrollView>
