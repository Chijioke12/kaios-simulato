<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a202c"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Phone Chassis -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#2d3748"
            android:orientation="vertical"
            android:padding="15dp"
            android:elevation="10dp">

            <!-- Screen Bezel -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4a5568" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="#000000" />

            <!-- Soft Keys -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <Button android:id="@+id/btnSoftLeft" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="MENU" android:backgroundTint="#4b5563" android:textSize="10sp" />
                <View android:layout_width="20dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnSoftRight" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="OPTIONS" android:backgroundTint="#4b5563" android:textSize="10sp" />
            </LinearLayout>

            <!-- D-Pad -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <Button android:id="@+id/btnUp" android:layout_width="40dp" android:layout_height="35dp" android:layout_centerHorizontal="true" android:text="â†‘" android:backgroundTint="#4a5568" />
                <Button android:id="@+id/btnLeft" android:layout_width="35dp" android:layout_height="40dp" android:layout_centerVertical="true" android:text="â†" android:backgroundTint="#4a5568" />
                <Button android:id="@+id/btnOk" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true" android:text="OK" android:backgroundTint="#48bb78" />
                <Button android:id="@+id/btnRight" android:layout_width="35dp" android:layout_height="40dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:text="â†’" android:backgroundTint="#4a5568" />
                <Button android:id="@+id/btnDown" android:layout_width="40dp" android:layout_height="35dp" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:text="â†“" android:backgroundTint="#4a5568" />
            </RelativeLayout>

            <!-- Call/End Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Button android:id="@+id/btnCall" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="ðŸ“ž" android:backgroundTint="#059669" />
                <View android:layout_width="40dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnEnd" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="ðŸ“µ" android:backgroundTint="#dc2626" />
            </LinearLayout>

            <!-- Number Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="10dp">
                <!-- Row 1 -->
                <Button android:id="@+id/btn1" android:text="1" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn2" android:text="2" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn3" android:text="3" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <!-- Row 2 -->
                <Button android:id="@+id/btn4" android:text="4" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn5" android:text="5" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn6" android:text="6" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <!-- Row 3 -->
                <Button android:id="@+id/btn7" android:text="7" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn8" android:text="8" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn9" android:text="9" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <!-- Row 4 -->
                <Button android:id="@+id/btnStar" android:text="*" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btn0" android:text="0" android:layout_columnWeight="1" android:backgroundTint="#374151" />
                <Button android:id="@+id/btnHash" android:text="#" android:layout_columnWeight="1" android:backgroundTint="#374151" />
            </GridLayout>

            <Button android:id="@+id/btnBack" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="BACKSPACE" android:layout_marginTop="5dp" android:backgroundTint="#4b5563" />

        </LinearLayout>

        <!-- URL Controls (Matches your screenshot) -->
        <EditText
            android:id="@+id/urlInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="http://localhost:8080"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:padding="10dp"
            android:background="#111827" />

        <Button
            android:id="@+id/btnLoad"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="LOAD URL"
            android:backgroundTint="#d1d5db"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>