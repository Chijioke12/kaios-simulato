<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a202c"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2d3748"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- SCREEN -->
            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="320dp"
                android:background="#000000">
                <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent" />
                <TextView android:id="@+id/defaultText" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:text="KaiOS 240x320" android:textColor="#FFFFFF" />
            </FrameLayout>

            <!-- SOFT KEYS -->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button android:id="@+id/btnSoftLeft" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="MENU" android:textColor="#FFFFFF" android:backgroundTint="#4b5563" android:padding="0dp" android:textAllCaps="false" />
                <View android:layout_width="10dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnSoftRight" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="OPTIONS" android:textColor="#FFFFFF" android:backgroundTint="#4b5563" android:padding="0dp" android:textAllCaps="false" />
            </LinearLayout>

            <!-- D-PAD -->
            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center">
                <Button android:id="@+id/btnUp" android:layout_width="50dp" android:layout_height="40dp" android:layout_centerHorizontal="true" android:text="â†‘" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:padding="0dp" />
                <Button android:id="@+id/btnLeft" android:layout_width="40dp" android:layout_height="50dp" android:layout_centerVertical="true" android:text="â†" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:padding="0dp" />
                <Button android:id="@+id/btnOk" android:layout_width="55dp" android:layout_height="55dp" android:layout_centerInParent="true" android:text="OK" android:textColor="#FFFFFF" android:backgroundTint="#48bb78" android:padding="0dp" />
                <Button android:id="@+id/btnRight" android:layout_width="40dp" android:layout_height="50dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:text="â†’" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:padding="0dp" />
                <Button android:id="@+id/btnDown" android:layout_width="50dp" android:layout_height="40dp" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:text="â†“" android:textColor="#FFFFFF" android:backgroundTint="#4a5568" android:padding="0dp" />
            </RelativeLayout>

            <!-- CALL/END -->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Button android:id="@+id/btnCall" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="ðŸ“ž" android:backgroundTint="#059669" />
                <View android:layout_width="15dp" android:layout_height="1dp" />
                <Button android:id="@+id/btnEnd" android:layout_width="0dp" android:layout_height="45dp" android:layout_weight="1" android:text="âŒ«" android:textColor="#FFFFFF" android:backgroundTint="#dc2626" />
            </LinearLayout>

            <!-- NUMPAD (Fixed columns and visibility) -->
            <GridLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_marginTop="5dp">
                <Button android:id="@+id/btn1" android:text="1" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn2" android:text="2" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn3" android:text="3" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn4" android:text="4" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn5" android:text="5" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn6" android:text="6" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn7" android:text="7" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn8" android:text="8" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn9" android:text="9" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btnStar" android:text="*" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btn0" android:text="0" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
                <Button android:id="@+id/btnHash" android:text="#" android:textColor="#FFFFFF" android:layout_columnWeight="1" android:backgroundTint="#374151" android:minHeight="45dp" android:padding="0dp" />
            </GridLayout>
        </LinearLayout>

        <!-- EXTERNAL UI -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="15dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/btnUpload" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="UPLOAD" android:textColor="#FFFFFF" android:backgroundTint="#2563eb" />
                <Button android:id="@+id/btnLoad" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="LOAD" android:textColor="#FFFFFF" android:backgroundTint="#059669" />
            </LinearLayout>
            <EditText android:id="@+id/urlInput" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="http://localhost:8080" android:textColor="#FFFFFF" android:background="#111827" android:padding="12dp" />
            
            <ScrollView android:id="@+id/logScroll" android:layout_width="match_parent" android:layout_height="100dp" android:background="#000000" android:layout_marginTop="5dp">
                <TextView android:id="@+id/keyLogger" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#00FF00" android:fontFamily="monospace" android:padding="8dp" android:textSize="12sp" android:text="> Logger Ready..." />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
