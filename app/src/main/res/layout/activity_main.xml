<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f172a"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- TOP BAR: THEME SWITCH -->
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <TextView android:id="@+id/appTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="KAIOS SIM" android:textColor="#FFF" android:textStyle="bold" />
            <Switch android:id="@+id/themeSwitch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:text="LIGHT MODE" android:textColor="#FFF" android:textSize="10sp" />
        </RelativeLayout>

        <!-- PHONE BODY -->
        <LinearLayout
            android:id="@+id/phoneChassis"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="#1e293b"
            android:orientation="vertical"
            android:padding="12dp"
            android:elevation="10dp">

            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="320dp"
                android:background="#1e1e1e">
                <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent" />
                <TextView android:id="@+id/defaultText" 
                    android:layout_width="match_parent" android:layout_height="match_parent" 
                    android:gravity="center" android:text="KAIOS\nREADY" 
                    android:textColor="#444" android:textStyle="bold"/>
            </FrameLayout>

            <!-- ... KEYPAD GROUPS (SoftKeys, DPad, Call, Numpad) ... -->
            <!-- Note: Re-use the keypad layouts from the previous working step here -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:orientation="vertical">
                 <Button android:id="@+id/btnOk" android:layout_width="60dp" android:layout_height="60dp" android:layout_gravity="center" android:text="OK" android:backgroundTint="#16a34a" />
            </LinearLayout>
        </LinearLayout>

        <!-- TOOLBOX -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="15dp">
            
            <Button android:id="@+id/btnGenIcon" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1. GENERATE ICON (HTML)" android:backgroundTint="#8b5cf6" />
            <Button android:id="@+id/btnSaveIcon" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2. DOWNLOAD ICON TO GALLERY" android:backgroundTint="#ec4899" android:layout_marginTop="5dp" />
            
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#334155" android:layout_margin="10dp" />

            <Button android:id="@+id/btnUpload" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="UPLOAD APP FILE" android:backgroundTint="#2563eb" />
            
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <EditText android:id="@+id/urlInput" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="localhost:8080" android:textColor="#FFF" android:background="#1e293b" android:padding="12dp" />
                <Button android:id="@+id/btnLoad" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GO" android:backgroundTint="#16a34a" />
            </LinearLayout>

            <ScrollView android:id="@+id/logScroll" android:layout_width="match_parent" android:layout_height="80dp" android:background="#000" android:layout_marginTop="10dp">
                <TextView android:id="@+id/keyLogger" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#22c55e" android:padding="10dp" android:fontFamily="monospace" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
