<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a202c"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal">

    <!-- THE PHONE BODY -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2d3748"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="8dp">

        <!-- KAIOS SCREEN (Locked Ratio) -->
        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="320dp"
            android:background="#000000"
            android:padding="1dp">
            
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Default Text if nothing is loaded -->
            <TextView
                android:id="@+id/defaultText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="KaiOS Simulator\n\nLoad a URL or File\nto Begin"
                android:textColor="#4a5568"
                android:textSize="14sp" />
        </FrameLayout>

        <!-- D-PAD & KEYPAD (Code remains similar to previous step but added Softkeys) -->
        <!-- ... Include the keypad grid from the previous response here ... -->
        
    </LinearLayout>

    <!-- LOGGER & FILE CONTROLS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btnUpload" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="UPLOAD HTML" android:textSize="10sp" android:backgroundTint="#2563eb"/>
            <Button android:id="@+id/btnLoad" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="LOAD URL" android:textSize="10sp" android:backgroundTint="#059669"/>
        </LinearLayout>

        <EditText android:id="@+id/urlInput" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="localhost:8080" android:textColor="#FFF" android:background="#111827" android:padding="8dp" />

        <!-- LIVE KEY LOGGER -->
        <TextView
            android:id="@+id/keyLogger"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#000"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="> Logger initialized..."
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>