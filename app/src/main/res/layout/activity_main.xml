<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a202c"
    android:padding="16dp">

    <!-- The Phone Screen -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000" />

    <!-- Control Section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="10dp">

        <Button android:id="@+id/btnUp" android:text="↑" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnOk" android:text="OK" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnDown" android:text="↓" android:layout_columnWeight="1" />
        
        <Button android:id="@+id/btnLeft" android:text="←" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnBack" android:text="BACK" android:layout_columnWeight="1" />
        <Button android:id="@+id/btnRight" android:text="→" android:layout_columnWeight="1" />
    </GridLayout>

    <EditText
        android:id="@+id/urlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://localhost:8080"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load URL" />

</LinearLayout>
